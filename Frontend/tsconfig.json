{
    "include": [
        "./src/**/*",
        "./global.d.ts"         // ← add this line to include your declaration
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": ["dom", "es2015"],
        "jsx": "react-jsx",

        // ← these two prevent type errors from 3rd-party libs
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    }
}
